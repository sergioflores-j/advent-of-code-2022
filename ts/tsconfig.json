{
  "compilerOptions": {
    "baseUrl": "ts/src",
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
